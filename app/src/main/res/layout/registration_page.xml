<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cropped"
    android:weightSum="1" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight=".15">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

 <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/userDetails"
    android:orientation="vertical" 
    android:paddingBottom="10dp"
    
    >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:text="Email" 
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="24dp"
        android:text="Password"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/etEmail"
        android:layout_alignRight="@+id/etEmail"
        android:background="@drawable/editbg"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLines="1" />

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="28dp"
        android:text="Retype" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="28dp"
        android:text="Sex"
        android:textColor="#ffffff" />

    <RadioGroup
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView2"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:text="Female"
            android:textColor="#ffffff" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="23dp"
        android:text="Age" 
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/etAge"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/etState"
        android:layout_alignRight="@+id/etContact"
        android:background="@drawable/editbg"
        android:ems="10"
        android:maxLines="1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/etAge"
        android:layout_marginTop="29dp"
        android:text="contact no" 
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/etContact"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:ems="10"
         android:maxLines="1"
        android:inputType="phone" 
         android:background="@drawable/editbg"/>

    <EditText
        android:id="@+id/etState"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/etPassword"
         android:maxLines="1"
        android:ems="10"  android:background="@drawable/editbg"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="20dp"   
        android:textColor="#ffffff"     
        android:text="City" />

  
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text="State" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/etCity"
        android:textColor="#ffffff"
 />
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/etContact"
        android:background="@drawable/editbg"
        android:ems="10" />

    <EditText
        android:id="@+id/etRetypePassword"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignRight="@+id/etPassword"
        android:background="@drawable/editbg"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLines="1" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/etRetypePassword"
        android:layout_below="@+id/textView3"
        android:background="@drawable/editbg"
        android:ems="10"
        android:maxLines="1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etName"
        android:layout_alignBottom="@+id/etName"
        android:layout_alignLeft="@+id/textView3"
        android:text="Name"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/etCity"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/textView7"
        android:background="@drawable/editbg"
        android:ems="10"
        android:maxLines="1" />

    </RelativeLayout>
</ScrollView>
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
     android:layout_weight=".85">
<Button
    android:id="@+id/btSingUp"
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:layout_marginBottom="14dp"
    android:background="@drawable/loginshape"
    android:text="SignUp"
    android:padding="10dp"
    android:textColor="#ffffff" />
</LinearLayout>

</LinearLayout>
